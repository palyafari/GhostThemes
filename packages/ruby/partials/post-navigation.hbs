<div class="gh-canvas">
    <div class="navigation">
        {{#prev_post}}
            <a class="navigation-item navigation-previous" href="{{url}}">
                {{#primary_tag}}
                    <span class="navigation-label">Previous post about <span class="post-tag">{{name}}</span></span>
                {{else}}
                    <span class="navigation-label">Previous post</span>
                {{/primary_tag}}
                
                <h4 class="navigation-title">{{title}}</h4>
            </a>
        {{/prev_post}}
        {{#next_post}}
            <a class="navigation-item navigation-next" href="{{url}}">
                {{#primary_tag}}
                    <span class="navigation-label">Next post about <span class="post-tag">{{name}}</span></span>
                {{else}}
                    <span class="navigation-label">Next post</span>
                {{/primary_tag}}
                
                <h4 class="navigation-title">{{title}}</h4>
            </a>
        {{/next_post}}
    </div>
</div>